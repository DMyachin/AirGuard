<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="de.seemoo.at_tracking_detection.ui.scan.ScanDistanceViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/blue_card_background" />

        <TextView
            android:id="@+id/device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.deviceAddress}"
            android:textSize="24sp"
            bind:layout_constraintBottom_toTopOf="@+id/distance_percentage"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/connection_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.connectionQuality.toString() + ` %`}"
            android:textSize="24sp"
            bind:layout_constraintBottom_toTopOf="@+id/distance_percentage"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/device_address" />

        <TextView
            android:id="@+id/distance_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.bluetoothRssi.toString()}"
            android:textSize="24sp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/battery_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.batteryState}"
            android:textSize="24sp"
            bind:layout_constraintBottom_toTopOf="@+id/connection_state"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/distance_percentage" />

        <TextView
            android:id="@+id/connection_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.connectionState}"
            android:textSize="24sp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="@+id/distance_percentage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>